<h2 id="contact_title">Contact Us</h2>

    <h5>Question not answered yet? We are here to help you!</h5>
    <br>
    <br>
    <div class="container">
        <div class="row">
          <div class="col-md-5">

            
            <div class="row">
                <div class="col-md-6">       
                               
                    <label id="contact_label"for="nameTextField"></label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter a valid email address"
                    name="email"
                    required>
                </div>

                <div class="col-md-6">          
                    <label id="contact_label"for="nameTextField"></label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Your Name"
                    name="name"
                    required>
                </div>
            </div>


            <label for="emailTextField"></label>
            <textarea class="form-control" id="contact_label" rows="3" placeholder="Enter Your Message"></textarea>



          </div>
          <div class="col-md-7" id="contact_img">
            <img src="/assets/images/Control_Plus.png" alt="" width="500" height="300">
          </div>

                    
          <div id="contact_page">
            <a href="/home" class="btn btn-primary" type="submit">
                <i class="fas fa-edit">Submit</i> </a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="/home" class="btn btn-warning" >
                <i class="fas fa-undo"> Cancel</i> 
            </a>
            </div>
</div>

