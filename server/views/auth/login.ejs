<%- include ../partials/header.ejs %>

<%- include ../partials/main-nav.ejs %>

<main class="container center">
  <!-- Message Area-->
  <%if(messages.length> 0) {%>
    <div class="alert alert-danger">
      <%=messages %>
    </div>
    <%}%>

  <div class="card" style="width: 16rem; height: 20rem;">
      <h1 class="title"><%- title %></h1>
      <form  class="justify-content-center" method="POST" autocomplete="off">
        <fieldset class="form-group">
          <input type="text" class="form-control-sm"
          name="username" placeholder="Username"
          id="username" required autofocus>
      </fieldset>
      <br>
      <fieldset>
          <input type="password" class="form-control-sm btn-sm text-alin-center"
          name="password" placeholder="Password"
          id="password" required autofocus>
      </fieldset>
      <br>
      <a class="registration" href="/register">Register Here</a>
      <br>
      <br>
      <fieldset class="form-group text-center">
        <input type="submit" class="btn btn-outline-primary" value="Login">
        <a href="/">
          <input type="button" class="btn btn-outline-danger" value="Cancel">
        </a>
      </fieldset>
    </form>

    </div>

</main>

