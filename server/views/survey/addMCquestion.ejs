<%- include ../partials/header.ejs %>
<%- include ../partials/main-nav.ejs %>

<!--Add Page-->
<main>
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <h1>
                    <%= title %>
                </h1>
                
                <form class="form" method="POST">
                    
                <ul id="list" style="list-style-type: none;">
                    <li class="form-group" id="responseOptions">
                        <label for="questionTextField">Question</label>
                        <input type="text" class="form-control" id="questionTextField" value="<%= question.surveyQuestion %>" name="surveyQuestion"  required pattern=".*\S+.*"title="field cannot be blank" >
                    </li>
                    <hr style="width: 100%; margin-left: auto; margin-right: auto;"
                    <% if(OptionList.length == null){ %>
                        
                        <li  id="selectionBox">
                            <label for="optiontext">Option </label>
                            <input type="text" class="form-control" name="optiontext" value="" id="TextField"    required pattern=".*\S+.*"title="field cannot be blank" >
                        </li>
                        <li  id="selectionBox">
                            <label for="optiontext">Option </label>
                            <input type="text" class="form-control" name="optiontext" value="" id="TextField"    required pattern=".*\S+.*"title="field cannot be blank" >
                        </li>
                        <% } else { %>
                    <% for(let count = 0; count < OptionList.length; count++) { %>
                       
                    <li  id="selectionBox">
                        <label for="optiontext">Option</label>
                        <input type="text" class="form-control" name="optiontext" value="<%= OptionList[count].optionsText %>" id="TextField<%=count%>" required pattern=".*\S+.*"title="field cannot be blank" >
                    </li>
                    
                    <%}%>
                    <% } %>
                    
                </ul>
                <br>
                    <br>
                    <button class="btn btn-primary" type="button" id="selectionButton" onclick="AddSelection()">Add Another Option</button>
                    <button class="btn btn-primary" type="button" id="selectionButton" style="margin-right: 5px;" onclick="RemoveSelection()">Remove Last Option</button>

                    <br>
                    <br style="height: 20px;">
                    <div style="margin-bottom: 100px;">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-save"></i> Submit
                    </button>
                    <a href="javascript:history.back()" class="btn btn-danger"><i class="fas fa-undo"></i> Cancel</a>
                    
                </div>
                </form>

            </div>
        </div>
    </div>
</main>

<%- include ../partials/bottom-nav.ejs %>
<%- include ../partials/footer.ejs %>
