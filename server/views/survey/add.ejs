<%- include ../partials/header.ejs %>
    <%- include ../partials/main-nav.ejs %>

        <!--Add Page-->
        <main>
            <div class="container">
                <div class="row">
                    <div class="offset-md-3 col-md-6">
                        <h1>
                            <%= title %>
                        </h1>
                        <!-- Form for adding survey information -->
                        <form class="form" method="POST">
                            <div class="form-group">
                                <label for="nameTextField">Survey Name</label>
                                <input type="text" class="form-control" id="nameTextField"
                                    placeholder="Enter Survey Name" name="surveyName" required pattern=".*\S+.*" title="field cannot be blank">
                            </div>
                        
                            <div class="form-group">
                                <label for="dateTextField">Expiration Date</label>
                                <input placeholder="Enter Expiration Date" class="textbox-n form-control" max="2100-12-31" type="date" onfocus="(this.type='date')"
                                    onblur="(this.type='text')" id="dateTextField" name="expirationDate" required />
                            </div>
                            <br>

                            <button class="btn btn-primary" formaction='/survey-list/save'>
                                <i class="fas fa-save"></i> Save
                            </button>
                            <a href="/home" class="btn btn-danger"><i class="fas fa-undo"></i> Cancel</a>
                            <button class="btn btn-warning" type="submit" formaction='/survey-list/add'>
                                <i class="fas fa-edit"></i> Publish
                            </button>
                            <br>
                            <br>
                            <br>
                            <hr style="height:5px">
                        </form>
                    </div>
                </div>
            </div>
        </main>

        <%- include ../partials/bottom-nav.ejs %>
            <%- include ../partials/footer.ejs %>