<%- include ../partials/header.ejs %>
<%- include ../partials/main-nav.ejs %>

  <div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
      <h1><%- title %></h1>    
        <form class="form" method="POST">
          <div class="form group"> 
            <label for="questionTextField">Question text:</label>
            <input type="text" class="form-control"
            id="questionTextField"
            value="<%= question.surveyQuestion %>"
            name="surveyQuestion" required>
          </div>        

          <div style="padding-top: 10px;">
            <button class="btn btn-primary" type="submit">
              <i class="fas fa-edit" > Submit</i></button>

              <a href="/survey-list/update/<%=question.surveyID %>" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>
          </div>
        </form>
      </div>  
    </div>
  </div>


<%- include ../partials/bottom-nav.ejs %>
<%- include ../partials/footer.ejs %>
